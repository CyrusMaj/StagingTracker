@model StagingTracker.Data.QualityControl

@{
    ViewData["Title"] = "Edit";
}

<br/>
<h1>Edit</h1>

<h4>QualityControl</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Qcid" />
            <div class="form-group">
                <label asp-for="ReceivingId" class="control-label"></label>
                <select asp-for="ReceivingId" class="form-control" asp-items="ViewBag.ReceivingId"></select>
                <span asp-validation-for="ReceivingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InspectionDate" class="control-label"></label>
                <input asp-for="InspectionDate" class="form-control" />
                <span asp-validation-for="InspectionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InspectionResult" class="control-label"></label>
                <input asp-for="InspectionResult" class="form-control" />
                <span asp-validation-for="InspectionResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InspectorName" class="control-label"></label>
                <input asp-for="InspectorName" class="form-control" />
                <span asp-validation-for="InspectorName" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
